<UserControl x:Name="UserControl"
             x:Class="Launcher.Desktop.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Launcher.Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" 
             MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" 
             MouseDoubleClick="UserControl_MouseDoubleClick" 
             MouseDown="UserControl_MouseDown" MouseUp="UserControl_MouseUp">
    
    <Border x:Name="ItemBorder" CornerRadius="8" Background="#4C5096DC">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.3*"/>
            </Grid.RowDefinitions>

            <Grid/>
            <Image x:Name="Image" Source="../logo-tr.ico" Margin="3"/>

            <TextBlock x:Name="Text" Grid.Row="1" Text="Text" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="14">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="0"/>
                </TextBlock.Effect>
            </TextBlock>

        </Grid>
    </Border>
</UserControl>
